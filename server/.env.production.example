# Production Environment Configuration
# Copy this file to .env.production and modify the values

# Environment Configuration
NODE_ENV=production
PORT=5050

# Database (Use MongoDB Atlas or production MongoDB instance)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/qahwatalemarat?retryWrites=true&w=majority

# JWT Authentication (Generate a secure random secret)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_SECRET_MINIMUM_32_CHARACTERS_LONG
JWT_EXPIRE=1h

# Admin Credentials (Generate secure credentials)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_TO_HASHED_PASSWORD

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# CORS (Only allow your production domain)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting (More permissive for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
FORCE_HTTPS=true

# Logging
LOG_LEVEL=info

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/qahwatalemarat

# SSL Configuration (if using custom SSL)
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt</content>
